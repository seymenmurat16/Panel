@model RegisterModel
@{
    ViewData["Title"] = "Rol Oluştur";
}
<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-4"></div>
        <div class="col-4">
            <div class="card ">
                <div class="card-heading text-center bg-success pt-3 pb-3 text-white">
                    <h4>Rol Ekle</h4>
                </div>
                <div class="card-body">

                    <form method="post">
                        <div asp-validation-summary="All"></div>
                        <div class="form-group">
                            <label form="name">Rol Adı :</label>
                            <input name="name" class="form-control" />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Ekle </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-4"></div>
</div>

