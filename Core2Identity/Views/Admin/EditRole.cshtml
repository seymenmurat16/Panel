@model RoleDetails
@{
    ViewData["Title"] = "EditRole";
}
<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-2"></div>
        <div class="col-8">
            <div class="card mb-4">
                <div class="card-heading text-center bg-danger pt-3 pb-3 text-white">
                    <h4>Panel</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="All"></div>
                        <input type="hidden" name="RoleId" value="@Model.Role.Id" />
                        <input type="hidden" name="RoleName" value="@Model.Role.Name" />
                        <h6 class="bg-info p-1 text-white">@Model.Role.Name Ekle</h6>
                        <table class="=table">
                            @if (Model.NonMembers.Count() == 0)
                            {
                                <tr><td colspan="2">Tüm Kullanıcılar Kayıtlı</td></tr>
                            }
                            else
                            {
                                @foreach (var user in Model.NonMembers)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>
                                            <input type="checkbox" name="IdsToAdd" value="@user.Id"
                                        </td>
                                    </tr>
                                }

                            }
                        </table>
                        <h6 class="bg-info p-1 text-white">@Model.Role.Name Sil</h6>
                        <table class="=table">
                            @if (Model.Members.Count() == 0)
                            {
                                <tr><td colspan="2">Kayıtlı Kullanıcı Yok</td></tr>
                            }
                            else
                            {
                                @foreach (var user in Model.Members)
                                {
                                    <tr>
                                        <td>@user.UserName</td>
                                        <td>
                                            <input type="checkbox" name="IdsToDelete" value="@user.Id"
                                        </td>
                                    </tr>
                                }

                            }
                        </table><br />
                        <button type="submit" class="btn btn-primary">Kaydet</button>
                        <a class="btn btn-danger" asp-action="Roles">İptal</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





