@model DuyuruYorumViewModel
@{
    ViewData["Title"] = "Detail";
}


<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card mb-5">
                <div class="card-heading text-center bg-success pt-3 pb-3 text-white">
                    <h4>@Model.Duyuru.Name</h4>
                </div>
                <div class="card-body">
                    <p>@Model.Duyuru.Description</p>
                    <h5 class="text-danger">Yorumlar</h5>
                    @foreach (var item in Model.Yorumlar)
                    {
                        @if (Model.Yorumlar.Count() == 0)
                        {
                            <p class="text-danger text-center">Yorum Yok</p>
                        }
                        else
                        {
                            <h6 class="text-primary">@item.UserId</h6>
                            <p>@item.YorumDescription</p><hr />
                        }
                    }

                    @if (User.Identity.IsAuthenticated)
                    {
                        <h6>Yorum Yazın</h6>
                        <form method="post">
                            <div asp-validation-summary="All"></div>
                            <input type="hidden" name="UserId" id="UserId" value="@User.Identity.Name" />
                            <input type="hidden" name="DuyuruId" id="DuyuruId" value="@Model.Duyuru.DuyuruId" />
                            <div class="form-group">
                                <input name="YorumDescription" id="YorumDescription" class="form-control" />
                            </div>

                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Yorum Ekle</button>
                            </div>

                        </form>
                    }
                    </table>
                </div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>





