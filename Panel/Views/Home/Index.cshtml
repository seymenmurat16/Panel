@model IEnumerable<Duyuru>
@{
    ViewData["Title"] = "Anasayfa";
}


<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card ">
                <div class="card-heading text-center bg-success pt-3 pb-3 text-white">
                    <h4>Duyurular</h4>
                </div>
                <div class="card-body">
                    <table class="table">

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>#</td>
                                    <td>
                                        <h6>@item.Name</h6>
                                        <p>@item.Description</p>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>





